<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_makeup_variants"
        android:layout_width="348dp"
        android:layout_height="59dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/makeup_variants"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/min_count"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button_makeup_variants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/max_name"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button_makeup_variants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <EditText
        android:id="@+id/minTextView"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:inputType="phone"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_makeup_variants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.71" />

    <EditText
        android:id="@+id/maxTextView"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:inputType="phone"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_makeup_variants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.71" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="293dp"
        android:layout_height="350dp"
        android:layout_marginTop="28dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_makeup_variants">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ждем ваших макияжей!"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>